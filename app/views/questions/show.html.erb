<%= form_with url: solve_question_path(@question.id), method: :post do |form| %>
  <h1><%= @question.title %></h1>

  <p><%= @question.body %></p>
  <p>Should be hidden <%= @answer.answer %></p>
  <p>Payment for this stage <%= @question.payment %></p>

  <div>
    <%= form.label :user_answer %><br>
    <%= form.text_field :user_answer %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<%= link_to "Back", questions_url,
            method: :get %>


<% if can? :update, current_user %>
  <%= link_to "Edit", edit_question_path(@question),
              method: :get %>
  <%= link_to "Destroy", question_path(@question),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
<% end %>
