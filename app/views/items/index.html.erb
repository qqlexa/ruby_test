<h1>Item#index</h1>
<p>Find me in app/views/items/index.html.erb</p>
<ul>
  <% @items.each do |item| %>
    <li>
        <a href="/items/<%= item.id %>">
          <%= item.title %>
        </a>
    </li>
  <% end %>

</ul>

<% if @admin %>
  <h2>Add a new item</h2>
  <%= form_with url: "/items", method: :post do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.label :price %><br>
      <%= form.number_field :price %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
<% end %>

